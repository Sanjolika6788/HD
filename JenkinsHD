pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sanjolika6788/HD.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    bat 'mvn -f C:/ProgramData/Jenkins/.jenkins/workspace/hd/pom.xml clean install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat 'mvn -f C:/ProgramData/Jenkins/.jenkins/workspace/hd/pom.xml test'
                }
            }
        }
        stage('Code Quality') {
            steps {
                script {
                    bat 'mvn -f C:/ProgramData/Jenkins/.jenkins/workspace/hd/pom.xml sonar:sonar'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                script {
                    bat 'docker build -t my-app C:/ProgramData/Jenkins/.jenkins/workspace/hd'
                    bat 'docker run -d -p 8080:8080 my-app'
                }
            }
        }
        stage('Release to Production') {
            steps {
                script {
                    bat 'aws deploy create-deployment --application-name my-app --deployment-group my-deployment-group --s3-location bucket=my-bucket,key=my-app.zip,bundleType=zip'
                }
            }
        }
        stage('Monitor') {
            steps {
                script {
                    bat 'datadog-agent status'
                }
            }
        }
    }
}
