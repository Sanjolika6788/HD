pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }
        stage('Code Quality') {
            steps {
                script {
                    sh 'mvn sonar:sonar'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                script {
                    sh 'docker build -t my-app .'
                    sh 'docker run -d -p 8080:8080 my-app'
                }
            }
        }
        stage('Release to Production') {
            steps {
                script {
                    sh 'aws deploy create-deployment --application-name my-app --deployment-group my-deployment-group --s3-location bucket=my-bucket,key=my-app.zip,bundleType=zip'
                }
            }
        }
        stage('Monitor') {
            steps {
                script {
                    // Example for Datadog
                    sh 'datadog-agent status'
                }
            }
        }
    }
}
