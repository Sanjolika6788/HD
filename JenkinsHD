pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1' // Ensure this matches the name you gave in the Maven configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sanjolika6788/HD.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    bat 'mvn clean install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Code Quality') {
            steps {
                script {
                    bat 'mvn sonar:sonar'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                script {
                    bat 'docker build -t my-app .'
                    bat 'docker run -d -p 8080:8080 my-app'
                }
            }
        }
        stage('Release to Production') {
            steps {
                script {
                    bat 'aws deploy create-deployment --application-name my-app --deployment-group my-deployment-group --s3-location bucket=my-bucket,key=my-app.zip,bundleType=zip'
                }
            }
        }
        stage('Monitor') {
            steps {
                script {
                    bat 'datadog-agent status'
                }
            }
        }
    }
}
